#!/bin/bash

# Requires sudo
if [ "$EUID" -ne 0 ]; then
    echo Error: wallpaper-slider requires root to install.
    exit 1
fi

if ! [ -d /home/$(logname)/wallpaperslider ] && ! [ -f /usr/local/bin/wallpaper-slider ] && ! [ -f /home/$(logname)/.config/systemd/user/wallpaper-slider.service ] && ! [ -f /home/$(logname)/.config/systemd/user/default.target.wants/wallpaper-slider.service ]; then
    echo The software is not currrently installed on this system.
else
    rm -r /home/$(logname)/wallpaperslider/
    rm /usr/local/bin/wallpaper-slider
    pkill -f "wallpaper_slider.py"

    if [[ -f /home/$(logname)/.config/systemd/user/wallpaper-slider.service ]]; then
        rm /home/$(logname)/.config/systemd/user/wallpaper-slider.service
    fi
    
    echo 'wallpaper-slider' Application successfully uninstalled.
fi