#!/bin/bash

if [ "$EUID" -ne 0 ]; then
    echo Error: wallpaper-slider requires root to install
    exit 1
fi

USER_HOME=$(getent passwd $SUDO_USER | cut -d: -f6)
WPS_HOME_DIR="wallpaperslider"
# checks if files exist in home dir, if wallpaper-slider file is in usr/loca/bin
if [ -d $USER_HOME/$WPS_HOME_DIR ] && [ -f /usr/local/bin/wallpaper-slider ] && [ -f /usr/bin/wallpaper_slider.py ] && [ -f /etc/wallpaper-slider-gnome.txt ]; then
    echo
    echo wallpaper-slider: Installed with version $(<$USER_HOME/$WPS_HOME_DIR/data/version.txt)
else
    # first command is not executed by super user
    sudo -u $SUDO_USER cp -r $WPS_HOME_DIR $USER_HOME
    # requires sudo permissions, run 'sudo ./install'
    # path temporary
    echo "$USER_HOME" | cat > /etc/wallpaper-slider-gnome.txt
    cp wallpaper-slider /usr/local/bin
    chmod +x /usr/local/bin/wallpaper-slider
    chmod +rwx $USER_HOME/$WPS_HOME_DIR
    # placing in home directory instead
    # cp wallpaper_slider.py /usr/bin

    echo
    echo Install successful!
    echo
    echo Invoke with "'wallpaper-slider'" command...
    echo
fi

echo Setup:
echo
echo "'wallpaper-slider -p'" Enter the path to your directory of wallpapers.
echo
echo "'wallpaper-slider -d'" Enter your desired delay in the appropriate format.
echo
echo "'wallpaper-slider -r'" Set to run on startup.
echo